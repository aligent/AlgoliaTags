<?xml version="1.0"?>
<config>
    <sections>
        <algoliasearch>
            <groups>
                <categories>
                    <fields>
                        <sync_tags_attribute>
                            <label>Send through _tags attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>algoliatags/system_config_form_field_categoryAttributes</source_model>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                In order to send tags to Algolia the attribute needs to be _tags. However Magento does not allow attributes to start with _. Therefore this will take the specified attribute and cast it to the _tags attribute to be sent to Algolia. Select 'None' if you do not want to override the sending of the _tags attribute.
                                ]]>
                            </comment>
                        </sync_tags_attribute>
                    </fields>
                </categories>
            </groups>
        </algoliasearch>
    </sections>
</config>
